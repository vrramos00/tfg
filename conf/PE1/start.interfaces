ifconfig bridge0 add em0
ifconfig bridge0 add mpw0
ifconfig bridge0 add mpw1

ifconfig bridge0 protected mpw0 1
ifconfig bridge0 protected mpw1 1

ifconfig mpw0 pwecw -pwefat
ifconfig mpw1 pwecw -pwefat


ospfd
ldpd
