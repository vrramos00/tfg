#!/usr/local/bin/bash
pfctl -d

ifconfig lo0 -inet6
ifconfig lo1 alias 192.168.0.1 netmask 255.255.255.255
ifconfig lo1 -inet6
ifconfig em1 10.0.10.1/24 mpls mtu 1530 up
ifconfig em0 up

ifconfig bridge0 create
ifconfig bridge0 up

ifconfig mpw0 create
#ifconfig mpw0 mtu 1526
ifconfig mpw0 up

ifconfig mpw1 create
#ifconfig mpw1 mtu 1526
